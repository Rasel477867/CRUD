@model List<Student>
@if(TempData["Succes"]!=null)
{
    <h2>
        @TempData["Succes"] 
    </h2>
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">
                Stdunet list
            </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Insert" class="btn btn-primary">
                Add student
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                   Age
                </th>
                <th>    
                    Action
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(U => U.Id))
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Age
                    </td>
                    <td>
                        <a asp-controller="Student" asp-action="Delete" class="text-danger" asp-route-id="@obj.Age">Delete</a>
                    </td>
                    <td>
                        <a asp-controller="Student" asp-action="Details" asp-route-id="@obj.Id">
                            Details
                        </a>
                        
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>
